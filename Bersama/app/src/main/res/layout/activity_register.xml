<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical">
    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="85dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_email">
        <EditText
            android:id="@+id/edt_first_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textAutoCorrect"
            android:textSize="18dp"
            android:layout_margin="10dp"/>
        </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_email"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edt_last_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textAutoCorrect"
            android:textSize="18dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_email"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edt_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="18dp"
            android:layout_margin="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_email"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edt_phone_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="number"
            android:textSize="18dp"
            android:layout_margin="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/tv_next_register"
        android:layout_marginTop="100dp"
        android:layout_gravity="end"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="NEXT"
        android:textSize="20sp"
        android:background="#e1ded2"/>
    <!--</LinearLayout>-->
</LinearLayout>